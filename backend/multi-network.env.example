# Multi-Network Gas Token Distribution Configuration
# Copy this to your .env file and configure as needed

# Unique ID of our app installation:
INSTALLATION_UID=your-guid

# Database Configuration
DATABASE_URL="file:./dev.db"

# Server Configuration
PORT=3001
NODE_ENV=development
API_URL=http://localhost:3001

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Ethereum network (legacy - for backward compatibility)
ETHEREUM_NETWORK=mainnet

# Multi-Network Ethereum Configuration
# Each network can be enabled/disabled independently
# Private key is shared across all networks (same address on all networks)

# Mainnet Configuration (Primary network)
ETHEREUM_MAINNET_ENABLED=true
ETHEREUM_MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Mainnet Configuration (Primary network)
ETHEREUM_CELO_ENABLED=true
ETHEREUM_CELO_RPC_URL=https://celo-json-rpc.stakely.io

# Polygon Configuration (Lower gas costs)
ETHEREUM_POLYGON_ENABLED=true
ETHEREUM_POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Arbitrum Configuration (L2 scaling)
ETHEREUM_ARBITRUM_ENABLED=true
ETHEREUM_ARBITRUM_RPC_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Optimism Configuration (L2 scaling)
ETHEREUM_OPTIMISM_ENABLED=true
ETHEREUM_OPTIMISM_RPC_URL=https://optimism-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Base Configuration (Coinbase L2)
ETHEREUM_BASE_ENABLED=true
ETHEREUM_BASE_RPC_URL=https://base-mainnet.infura.io/v3/YOUR_PROJECT_ID

# Sepolia Testnet Configuration (For testing)
ETHEREUM_SEPOLIA_ENABLED=false
ETHEREUM_SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Localhost Development Configuration (For local development)
ETHEREUM_LOCALHOST_ENABLED=false
ETHEREUM_LOCALHOST_RPC_URL=http://localhost:8545

# Solana Configuration
SOLANA_ENABLED=true
SOLANA_NETWORK_ID=solana-mainnet
SOLANA_NETWORK_NAME=Solana Mainnet
SOLANA_NATIVE_SYMBOL=SOL
SOLANA_NATIVE_DECIMALS=9
SOLANA_MIN_GAS_RESERVE=0.0001
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WALLET_ADDRESS=YourSolanaWalletPublicKey

# Bitcoin Configuration
BITCOIN_ENABLED=true
BITCOIN_NETWORK_ID=bitcoin-mainnet
BITCOIN_NETWORK_NAME=Bitcoin Mainnet
BITCOIN_NATIVE_SYMBOL=BTC
BITCOIN_NATIVE_DECIMALS=8
BITCOIN_MIN_GAS_RESERVE=0.0001
BITCOIN_RPC_URL=http://localhost:8332
BITCOIN_RPC_USERNAME=your-bitcoin-rpc-username
BITCOIN_RPC_PASSWORD=your-bitcoin-rpc-password

# Polkadot Configuration
POLKADOT_ENABLED=true
POLKADOT_NETWORK_ID=polkadot-mainnet
POLKADOT_NETWORK_NAME=Polkadot Mainnet
POLKADOT_NATIVE_SYMBOL=DOT
POLKADOT_NATIVE_DECIMALS=10
POLKADOT_MIN_GAS_RESERVE=0.001
POLKADOT_RPC_URL=https://rpc.polkadot.io
POLKADOT_WALLET_ADDRESS=YourPolkadotWalletAddress

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# OAuth Provider Configuration
# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ORCID OAuth
ORCID_CLIENT_ID=your-orcid-client-id
ORCID_CLIENT_SECRET=your-orcid-client-secret
ORCID_DOMAIN=sandbox.orcid.org

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
