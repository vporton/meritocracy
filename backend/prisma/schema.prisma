// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Can be changed to "postgresql" or "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  name           String?
  ethereumAddress String? @unique
  orcidId        String?  @unique
  githubHandle   String?  @unique
  bitbucketHandle String? @unique
  gitlabHandle   String?  @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  bannedTill     DateTime?
  lastPaymentAmount Decimal?

  // Relationships
  sessions       Session[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model Batches {
  id             BigInt      @id @default(autoincrement())
  createdAt      DateTime    @default(now())
  
  // Relationships
  batchMappings  BatchMapping[]

  @@map("batches")
}

model BatchMapping {
  id        Int      @id @default(autoincrement())
  customId  String   @unique
  batchId   BigInt
  batch     Batches  @relation(fields: [batchId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@map("batch_mappings")
}

model NonBatches {
  id             BigInt      @id @default(autoincrement())
  createdAt      DateTime    @default(now())
  
  // Relationships
  nonbatchMappings  NonBatchMapping[]

  @@map("non_batches")
}

model NonBatchMapping {
  id         Int      @id @default(autoincrement())
  customId   String   @unique
  response   String
  nonBatchId BigInt
  batch      NonBatches  @relation(fields: [nonBatchId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@map("non_batch_mappings")
}

model Task {
  id             Int      @id @default(autoincrement())
  status         String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, CANCELLED
  runnerClassName String? // Name of the class implementing TaskRunner interface
  runnerData     String?  // JSON data to pass to the runner
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  completedAt    DateTime?
  
  // Self-referencing relationships for dependencies
  // Tasks that this task depends on (prerequisites)
  dependencies TaskDependency[] @relation("TaskDependencies")
  // Tasks that depend on this task (dependents)
  dependents   TaskDependency[] @relation("TaskDependents")

  @@map("tasks")
}

model TaskDependency {
  id           Int @id @default(autoincrement())
  taskId       Int
  dependencyId Int
  
  // The task that has the dependency
  task         Task @relation("TaskDependencies", fields: [taskId], references: [id], onDelete: Cascade)
  // The task that is the dependency (prerequisite)
  dependency   Task @relation("TaskDependents", fields: [dependencyId], references: [id], onDelete: Cascade)

  // Ensure no duplicate dependencies
  @@unique([taskId, dependencyId])
  @@map("task_dependencies")
}


